@model MAS_semestral_project_MVS.DataBaseModels.Offer

<h4>CustomerConversation</h4>
<hr />
<div class="form-page">
    <div class="col-md-4">
        <form asp-antiforgery="true" asp-action="CreateByInfo" asp-controller="Conversation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomIdRoom" class="control-label"></label>
                <select asp-for="RoomIdRoom" class="form-control" asp-items="ViewBag.RoomIdRoom">
                    @foreach (var item in (IEnumerable<Room>)ViewData["rooms"])
                    {
                        <option value="@item.IdRoom">@item.IdRoom</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="RoomPrice" class="control-label"></label>
                <input asp-for="RoomPrice" class="form-control" />
                <span asp-validation-for="RoomPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableTo" class="control-label"></label>
                <input asp-for="AvailableTo" class="form-control" />
                <span asp-validation-for="AvailableTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableFrom" class="control-label"></label>
                <input asp-for="AvailableFrom" class="form-control" />
                <span asp-validation-for="AvailableFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="button-back" asp-action="Index">Back to List</a>
                <input type="submit" value="Create" class="btn btn-primary button-create" placeholder="Create" />
            </div>

        </form>
    </div>
    <div>
        
    </div>
</div>
