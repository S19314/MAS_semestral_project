@model MAS_semestral_project_MVS.DataBaseModels.Order

<h4>CustomerConversation</h4>
<hr />
<div class="form-page">
    <div class="col-md-4">
        <form asp-antiforgery="true" asp-action="CreateByInfo" asp-controller="Conversation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OfferId" class="control-label"></label>
                <select asp-for="OfferId" class="form-control" asp-items="ViewBag.OfferId">
                    @foreach (var item in (IEnumerable<Offer>)ViewData["offers"])
                    {
                        <option value="@item.Id">@item.Id : @item.RoomPrice $</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="OsobaIdOsoba" class="control-label"></label>
                <select asp-for="OsobaIdOsoba" class="form-control" asp-items="ViewBag.OsobaIdOsoba">
                    @foreach (var item in (IEnumerable<Person>)ViewData["clients"])
                    {
                        <option value="@item.IdOsoba">@item.IdOsoba @item.SecondName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Osoba2IdOsoba" class="control-label"></label>
                <select asp-for="Osoba2IdOsoba" class="form-control" asp-items="ViewBag.Osoba2IdOsoba">
                    @foreach (var item in (IEnumerable<Person>)ViewData["receptionists"])
                    {
                        <option value="@item.IdOsoba">@item.IdOsoba @item.SecondName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <a class="button-back" asp-action="Index">Back to List</a>
                <input type="submit" value="Create" class="btn btn-primary button-create" placeholder="Create" />
            </div>
        </form>
    </div>
    <div>
        
    </div>
</div>
