@model MAS_semestral_project_MVS.Models.Views.HomeModelView

@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <div class="table-title-contener">
        <h3 class="table-title">Client list</h3>
        <h3 class="table-title">Receptionist list</h3>
    </div>
    <div class="elements-table-place">
        <table class="list-element">
            <thead>
                <tr>
                    <th class="element-head">
                        First Name
                    </th>
                    <th class="element-head">
                        Second Name
                    </th>
                    <th class="element-head">
                        Passport Data
                    </th>
                    <th class="element-button-head">Actions</th> 
                </tr>
            </thead>
            <tbody class="table-element-body">
                <div class="scroll-items">
                    @foreach (var item in Model.Clients)
                    {
                        <tr>
                            <td class="element-body">
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td class="element-body">
                                @Html.DisplayFor(modelItem => item.SecondName)
                            </td>
                            <td class="element-body">
                                @Html.DisplayFor(modelItem => item.PassportData)
                            </td>
                            <td class="element-body">
                                <a class="button-find" asp-action="FindByClientReceptionists" asp-route-id="@item.IdOsoba">Find Receptionists</a>
                            </td>
                        </tr>
                    }
                </div>
            </tbody>
        </table>
    <table class="list-element">
        <thead>
            <tr>
                <th class="element-head">
                    First Name
                </th>
                <th class="element-head">
                    Second Name
                </th>
                <th class="element-head">
                    Employee Experience Type
                </th>
                <th class="element-button-head">Actions</th>
        </tr>
        </thead>
        <tbody class="table-element-body">
            <div class="scroll-items">
                @foreach (var item in Model.Receptionists)
                {
                    <tr>
                        <td class="element-body">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td class="element-body">
                            @Html.DisplayFor(modelItem => item.SecondName)
                        </td>
                        <td class="element-body">                   
                            @Html.DisplayFor(modelItem => item.EmployeeExperienceType) 
                        </td>
                        <td class="element-body">
                            <a class="button-find" asp-action="FindByReceptionistClients" asp-route-id="@item.IdOsoba">Find Clients</a>
                        </td>
                    </tr>
                }
            </div>
        </tbody>
        </table>
    <p>@ViewData["my_info"]</p> 
    </div>
</div>
