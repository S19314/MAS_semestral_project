                <label asp-for="InternshipDaysInCurentHotel" class="control-label"></label>
                <input asp-for="InternshipDaysInCurentHotel" class="form-control" />
                <span asp-validation-for="InternshipDaysInCurentHotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourRate" class="control-label"></label>
